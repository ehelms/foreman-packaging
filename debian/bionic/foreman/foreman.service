[Unit]
Description=Foreman
Documentation=https://theforeman.org
After=network.target remote-fs.target nss-lookup.target

[Service]
Type=simple
User=$FOREMAN_USER
TimeoutSec=300
WorkingDirectory=/usr/share/foreman
ExecStart=/usr/bin/bundle exec rails server -e $FOREMAN_ENV -p $FOREMAN_PORT -b $FOREMAN_BIND
Environment=FOREMAN_ENV=production FOREMAN_PORT=3000 FOREMAN_BIND=0.0.0.0 FOREMAN_USER=foreman
EnvironmentFile=-/etc/default/foreman

[Install]
WantedBy=multi-user.target
